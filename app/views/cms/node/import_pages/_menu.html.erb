<nav class="act-menu">
  <% if params[:action] =~ /index/ %>
    <%= link_to :new, { action: :new }, class: :new %>
  <% elsif params[:action] =~ /new|create/ %>
    <%= link_to :back_to_index, { action: :index }, class: "back-to-index" %>
  <% elsif params[:action] =~ /edit|update|delete|move/ %>
    <%= link_to :back_to_show, { action: :show, id: @item }, class: "back-to-show" %>
    <%= link_to :back_to_index, { action: :index }, class: "back-to-index" %>
  <% else %>
    <%= link_to :edit, { action: :edit, id: @item }, class: :edit %>
    <%= link_to t("cms.convert_to_cms_page"), { action: :convert, id: @item }, class: :convert %>
    <%= link_to :copy, { action: :copy, id: @item }, class: :copy %>
    <%= link_to :move, { action: :move, id: @item }, class: :move %>
    <%= link_to :delete, { action: :delete, id: @item }, class: :delete %>
    <%= link_to :back_to_index, { action: :index }, class: "back-to-index" %>
  <% end %>
</nav>

<% if params[:action] =~ /show|new|edit|create|update/ %>
<%= render file: "_addons_menu" %>
<% end %>
